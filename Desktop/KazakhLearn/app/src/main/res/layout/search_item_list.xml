<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:paddingStart="15dp"
    android:paddingEnd="15dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.github.abdularis.civ.CircleImageView
            android:id="@+id/wordImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/noimage"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:id="@+id/searchWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SearchText"
            android:textSize="24sp"
            android:layout_toEndOf="@+id/wordImg"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/searchMean"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meaning"
            android:textSize="24sp"
            android:layout_below="@+id/searchWord"
            android:layout_toEndOf="@+id/wordImg"
            android:textColor="@color/White"/>

        <TextView
            android:layout_marginStart="20dp"
            android:id="@+id/searchTranscript"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transcript"
            android:layout_toEndOf="@+id/wordImg"
            android:layout_below="@+id/searchMean"
            android:textColor="@color/White50"/>

    </RelativeLayout>

</LinearLayout>